<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name="schmear~">
	<digest>
		Spectral smearing
	</digest>
	<description>
schmear~ convolves the amplitude spectrum with a user-supplied impulse response, thus smearing the spectrum,  for those times when you need a New York moment.
	</description>
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">
			Eric Lyon
		</metadata>
		<metadata name="tag">
			MSP
		</metadata>
		<metadata name="tag">
			FFTease
		</metadata>
	</metadatalist>
	<!--INLETS-->
	<inletlist>
		<inlet id="0" name="INLET_NAME">
			<digest>
				(signal) input/messages
			</digest>
		</inlet>
	</inletlist>
	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" name="OUTLET_NAME">
			<digest>
				(signal) output
			</digest>
		</outlet>
	</outletlist>
	<!--ARGUMENTS-->
	<!--objarglist>
		<objarg name="analysis length" optional="0" type="int">
			<digest>
				Analysis length
			</digest>
			<description>
				The required initial argument specifies size of the analysis buffer in milliseconds.
			</description>
		</objarg>
	</objarglist-->
	<!--MESSAGES-->
	<methodlist>




        <method name="fftinfo">
            <description>
                Print FFT information to Max window
            </description>
        </method>

        <method name="mute">
            <arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
            <description>
                Non-zero flag mutes the object
            </description>
        </method>

        <method name="schmimp">
            <arglist>
                <arg name="convolution kernel" type="list" optional="0" id="0" />
            </arglist>
            <description>
                kernel to spread spectral energy
            </description>
        </method>

        <method name="shift">
            <arglist>
                <arg name="flag" type="int" optional="0" id="0" />
            </arglist>
            <description>
                Shift energy up by a specified number of bins
            </description>
        </method>

        <method name="threshold">
            <arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
            <description>
                Threshold for shifting bin convolution
            </description>
        </method>

	</methodlist>
	<!--ATTRIBUTES-->
	<attributelist>

        
		<attribute name="fftsize" get="1" set="1" type="int" size="10">
			<description>
				FFT size (default is 1024)
			</description>
		</attribute>
  
      <attribute name="interpolation" get="1" set="1" type="int" size="10">
          <description>
              Flag to interpolate between FFT frames (default is 0)
          </description>
      </attribute>
      
		<attribute name="overlap" get="1" set="1" type="int" size="10">
			<description>
				Overlap factor (default is 8)
			</description>
        </attribute>
 
 <attribute name="size" get="1" set="1" type="int" size="10">
     <description>
         Length of internal buffer in milliseconds
     </description>
 </attribute>
 
       
	</attributelist>
	<!--EXAMPLE-->

	<!--SEEALSO-->
	<!--seealsolist>
		<seealso name="fftz.residency~" />
	</seealsolist-->

</c74object>
