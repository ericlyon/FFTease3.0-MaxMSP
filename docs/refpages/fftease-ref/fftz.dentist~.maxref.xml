<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name="fftz.dentist~">
	<digest>
		Spiky filtering
	</digest>
	<description>
Punches out all but a select set of partials.
	</description>
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">
			Eric Lyon
		</metadata>
		<metadata name="tag">
			MSP
		</metadata>
		<metadata name="tag">
			FFTease
		</metadata>
	</metadatalist>
	<!--INLETS-->
	<inletlist>
		<inlet id="0" name="INLET_NAME">
			<digest>
				(signal) input/messages
			</digest>
		</inlet>
	</inletlist>
	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" name="OUTLET_NAME">
			<digest>
				(signal) output
			</digest>
		</outlet>
	</outletlist>
	<!--ARGUMENTS-->
	<!--MESSAGES-->
	<methodlist>

		<method name="fftinfo">
			<description>
				Print FFT information to Max window
			</description>
		</method>
		<method name="interpolate_singles">
			<arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
			<description>
				Interpolates bewteen successive settings when flag is non-zero
			</description>
		</method>
		<method name="ramptime">
			<arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
			<description>
				Time in milliseconds to interpolate between filters when interpolate_singles flag is set
			</description>
		</method>
		<method name="mute">
			<arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
			<description>
				Non-zero flag mutes the object
			</description>
		</method>
		<method name="scramble">
			<description>
				Randomly creates a new filter
			</description>
		</method>
		<method name="setstate">
			<arglist>
                <arg name="flag" type="list" optional="0" id="0" />
            </arglist>
			<description>
				Activates bins of filter specified in list
			</description>
		</method>
		<method name="showstate">
			<description>
				Sends current filter to third outlet as a list
			</description>
		</method>
		<method name="toothcount">
			<arglist>
                <arg name="flag" type="int" optional="0" id="0" />
            </arglist>
			<description>
				Number of bins to activate in next filter
			</description>
		</method>
		<method name="topfreq">
			<arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
			<description>
				Highest frequency to include in scramble profile
			</description>
		</method>
	</methodlist>
	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="fftsize" get="1" set="1" type="int" size="10">
			<description>
				FFT size (default is 1024)
			</description>
		</attribute>
		<attribute name="overlap" get="1" set="1" type="int" size="10">
			<description>
				Overlap factor (default is 8)
			</description>
        </attribute>
	</attributelist>
	<!--EXAMPLE-->

	<!--SEEALSO-->
	<!--seealsolist>
		<seealso name="fftz.codepend~" />
	</seealsolist-->

</c74object>
