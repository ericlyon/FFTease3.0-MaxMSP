<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name="fftz.loopsea~">
	<digest>
		FFT bin level looper
	</digest>
	<description>
An FFT-analyzed sound is stratified into individual bin level loops
	</description>
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Eric Lyon</metadata>
		<metadata name="tag">MSP</metadata>
		<metadata name="tag">FFTease</metadata>
	</metadatalist>
	<!--INLETS-->
    <inletlist>
        <inlet id="0" type="INLET_TYPE">
            <digest>
                Audio Inlet(s)
            </digest>
            <description>
            </description>
        </inlet>
    </inletlist>
	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" name="OUTLET_NAME">
			<digest>
				(signal) output
			</digest>
		</outlet>
        <outlet id="1" name="OUTLET_NAME">
            <digest>
                (signal) record sync
            </digest>
        </outlet>
        <outlet id="2" name="OUTLET_NAME">
            <digest>
                (list) current loop data
            </digest>
        </outlet>
	</outletlist>
	<!--ARGUMENTS-->
	<!--MESSAGES-->
	<methodlist>
		<method name="acquire_sample">
			<description>
				Start recording audio input
			</description>
		</method>
		<method name="fftinfo">
			<description>
				Print FFT information to Max window
			</description>
		</method>
        <method name="flat_transpose">
            <description>
                Sets all transposition factors back to 1.0
            </description>
        </method>
		<method name="mute">
			<arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
			<description>
				Non-zero flag mutes the object
			</description>
		</method>
        
		<method name="oscbank">
            <arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
			<description>
                Non-zero flag selects oscillator bank resynthesis
			</description>
		</method>

        <method name="printloops">
            <description>
                Send loop data as a list out the rightmost outlet
            </description>
        </method>
        <method name="randspeed">
            <arglist>
                <arg name="min loop size (ms)" type="float" optional="0" id="0" />
                <arg name="max loop size (ms)" type="float" optional="0" id="0" />
            </arglist>
            <description>
                Randomly set the speed of each loop
            </description>
        </method>
        <method name="randtransp">
            <arglist>
                <arg name="min transpose factor" type="float" optional="0" id="0" />
                <arg name="max transpose factor" type="float" optional="0" id="1" />
            </arglist>
            <description>
                Randomly set the transposition factor for each loop
            </description>
        </method>
        <method name="readloops">
            <arglist>
                <arg name="loop data" type="list" optional="0" id="0" />
            </arglist>
            <description>
                Restore loop data generated by the "printloops" message
            </description>
        </method>
        <method name="restart_loops">
            <arglist>
            </arglist>
            <description>
                Start all loops from their beginnings
            </description>
        </method>
        <method name="setloops">
            <arglist>
                <arg name="min loop size (ms)" type="float" optional="0" id="0" />
                <arg name="max loop size (ms)" type="float" optional="0" id="1" />
            </arglist>
            <description>
                Algorithmically generate all loops
            </description>
        </method>
        <method name="setspeed">
            <arglist>
                <arg name="global speed" type="float" optional="0" id="0" />
            </arglist>
            <description>
                Set all loops to the specified speed
            </description>
        </method>
        <method name="synthresh">
            <arglist>
                <arg name="threshold" type="float" optional="0" id="0" />
            </arglist>
            <description>
                Set the synthesis threshold for oscillator mode (higher values will reduce the number of active oscillators and may reduce noise)
            </description>
        </method>
        <method name="transp_choose">
            <arglist>
                <arg name="list of transposition factors" type="list" optional="0" id="0" />
            </arglist>
            <description>
                Randomly chooses the transposition factor for each loop from the provided list of values
            </description>
        </method>
        <method name="transpose">
            <arglist>
                <arg name="transposition factor" type="float" optional="0" id="0" />
            </arglist>
            <description>
                Set the transposition factor for all loops
            </description>
        </method>
	</methodlist>
	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="fftsize" get="1" set="1" type="int" size="1">
			<description>
				FFT size (default is 1024)
			</description>
		</attribute>
  
		<attribute name="overlap" get="1" set="1" type="int" size="1">
			<description>
				Overlap factor (default is 8)
			</description>
        </attribute>
	</attributelist>
	<!--Ins & Outs-->
    <misc name = "Inlets">
        <entry name ="Inlet 1 (signal/messages)">
            <description>
                Audio Input
            </description>
        </entry>
    </misc>
    <misc name = "Outlets">
        <entry name ="Outlet 1 (signal)">
            <description>
                Audio Output
            </description>
        </entry>
        <entry name ="Outlet 2 (signal)">
            <description>
                Record Sync
            </description>
        </entry>
        <entry name ="Outlet 3 (list)">
            <description>
                Current Loop Data
            </description>
        </entry>
    </misc>
	<!--SEEALSO-->
	<seealsolist>
		<seealso name="fftz.resent~" />
	</seealsolist>

</c74object>
