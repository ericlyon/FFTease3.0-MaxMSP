<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name="pvcompand~">
	<digest>
		Spectral compander
	</digest>
	<description>
pvcompand~ either expands or compresses the differences between the amplitudes of the spectral frames. The threshold is interpreted as dB and useful ranges are from about -60 to +60. Positive values increase the "peakiness" of the sound and negative values tend to whiten the spectrum.
	</description>
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">
			Eric Lyon
		</metadata>
		<metadata name="tag">
			MSP
		</metadata>
		<metadata name="tag">
			FFTease
		</metadata>
	</metadatalist>
	<!--INLETS-->
	<inletlist>
		<inlet id="0" name="INLET_NAME">
			<digest>
				(signal) input/messages
			</digest>
		</inlet>
	</inletlist>
	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" name="OUTLET_NAME">
			<digest>
				(signal) output
			</digest>
		</outlet>
	</outletlist>
	<!--ARGUMENTS-->
	<!--MESSAGES-->
	<methodlist>

        <method name="fftinfo">
            <description>
                Print FFT information to Max window
            </description>
        </method>

        <method name="mute">
            <arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
            <description>
                Non-zero flag mutes the object
            </description>
        </method>


        <method name="normalize">
            <arglist>
                <arg name="flag" type="float" optional="0" id="0" />
            </arglist>
            <description>
                Normalizes spectrum when flag is non-zero (off by default)
            </description>
        </method>


	</methodlist>
	<!--ATTRIBUTES-->
	<attributelist>
        
		<attribute name="fftsize" get="1" set="1" type="int" size="10">
			<description>
				FFT size (default is 1024)
			</description>
		</attribute>
  
		<attribute name="overlap" get="1" set="1" type="int" size="10">
			<description>
				Overlap factor (default is 8)
			</description>
        </attribute>
	</attributelist>
	<!--EXAMPLE-->

	<!--SEEALSO-->
	<!--seealsolist>
		<seealso name="fftz.ether~" />
	</seealsolist-->

</c74object>
